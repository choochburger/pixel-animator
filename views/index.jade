extends layout

block content
  if (!everyauth.loggedIn)
    p Login with Google
    .google_login
      a(href='/auth/google', style='border: 0px')
        img(style='border: 0px', src='https://www.google.com/favicon.ico')

    hr
    
    p Login with Facebook
    .facebook_login
      a(href='/auth/facebook', style='border: 0px')
        img(style='border: 0px', src='https://www.facebook.com/favicon.ico')
  else
    p
      | Welcome to Pixel Animator, #{everyauth.user.first_name} #{everyauth.user.last_name}
    img(src='#{everyauth.user.avatar}' style='max-width: 100px;')

    hr

    a(href='/logout') Logout
